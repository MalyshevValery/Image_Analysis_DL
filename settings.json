{
  "loader": {
    "images": {
      "type": "directory",
      "dir": "Data/Test_Images",
      "color_transform": "to_gray"
    },
    "masks": {
      "type": "directory",
      "dir": "Data/Masks",
      "color_transform": "to_gray"
    },
    "extensions": {
      "image": [],
      "mask": [
        {
          "type": "type_scale",
          "src_max": 255,
          "target_type": "float32",
          "target_max": 1.0
        },
        {
          "type": "split_mask"
        },
        {
          "type": "ignore_region"
        }
      ],
      "save_image": [
        {
          "type": "type_scale",
          "src_max": 255,
          "target_type": "float32",
          "target_max": 1.0
        }
      ],
      "save": [
        {
          "type": "type_scale",
          "src_max": 1,
          "target_type": "uint8",
          "target_max": 255
        }
      ]
    }
  },
  "train_val_test": [
    0.8,
    0.1,
    0.1
  ],
  "augmentation_all": [
    {
      "transform": "ToFloat"
    }
  ],
  "model": {
    "name": "UNet",
    "input_shape": [
      256,
      256,
      1
    ]
  },
  "model_compile": {
    "optimizer": "adam",
    "loss": "dice",
    "metrics": [
      "acc",
      "iou"
    ]
  },
  "batch_size": 4,
  "generator_params": {
    "epochs": 1
  },
  "callbacks": [
    {
      "name": "tensorboard",
      "log_dir": "$BASE$",
      "profile_batch": 0,
      "histogram_freq": 1,
      "write_images": true,
      "update_freq": "batch",
      "embeddings_freq": 1
    },
    {
      "name": "checkpoint",
      "filepath": "$BASE$/check.h5"
    },
    {
      "name": "save_best"
    }
  ]
}